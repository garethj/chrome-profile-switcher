{
  "manifest_version": 3,
  "name": "Profile Switcher",
  "version": "1.0.0",
  "description": "Switch Chrome profiles with one click",
  "permissions": [
    "nativeMessaging",
    "identity",
    "identity.email",
    "contextMenus",
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "mac": "Alt+Shift+P",
        "default": "Alt+Shift+P"
      },
      "description": "Switch Chrome profile"
    }
  },
  "action": {
    "default_title": "Switch Profile"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
